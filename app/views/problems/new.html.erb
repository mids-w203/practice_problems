<div class="ui basic segment">
<h1>Create a problem</h1>
<%= form_for @problem, url: topic_problems_url(@problem.topic), html: {class: "ui form"} do |f| %>
    <div class="ui field">
        <%= f.label "Topic" %>
        <div class="ui search selection dropdown">
            <%= f.text_field :topic_id, type: 'hidden', value: @problem.topic.id %>
            <i class="dropdown icon"></i>
            <div class="default text">Topic</div>
            <div class="menu">
            <% Topic.all.each do |t| %>
                <div class="item" data-value="<%= t.id %>">
                    <%= "#{t.category.title}/#{t.title}" %>
                </div>
            <% end %>
            </div>
        </div>
    </div>

    <div class="ui field">
        <%= f.label :title %> 
        <%= f.text_field :title %>
    </div>

    <div class="ui required field">
        <%= f.label :index %> 
        <%= f.text_field :index, required: true %>
    </div>

    <div class="ui required field">
        <%= f.label :statement %> 
        <%= f.text_area :statement, rows: 3 %>
    </div>


    <div class="ui field">
        <%= f.label :solution %> 
        <%= f.text_area :solution, rows: 8 %>
    </div>
  
    <div class="ui field">
        <%= f.label :answer %>
        <%= f.text_field :answer %>
    </div>

    <%= f.submit class: "ui green button" %>
<% end %>
</div>

<script>
    var simplemde = new SimpleMDE({ element: document.getElementById("problem_solution") });
    var simplemde1 = new SimpleMDE({ element: document.getElementById("problem_statement") });
    $('.fa-eye').click(function(){
        MathJax.typeset();
    })
</script>
